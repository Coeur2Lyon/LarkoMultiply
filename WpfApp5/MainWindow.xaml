<Window x:Class="LarkoMultiply.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LarkoMultiply"
        mc:Ignorable="d"
        Title="LarkoMultiply: Accueil" Height="200" Width="250">
    <Grid Margin="0,0,0,0" Background="#FF3F3D3D">
        <Button x:Name="Bouton_Start" Content="Start" HorizontalAlignment="Left" Margin="21,119,0,0" VerticalAlignment="Top" Width="97" Height="34" Foreground="White" Background="#FF1CBD52" FontSize="20" FontFamily="Showcard Gothic" BorderBrush="#FF1CBD52" Click="Bouton_Start_Click"/>
        <TextBlock HorizontalAlignment="Left" TextAlignment="Center" Margin="21,10,0,0" TextWrapping="Wrap" Text="Larko Multiply" VerticalAlignment="Top" Height="94.2" Width="212" FontSize="36" FontFamily="Showcard Gothic" Foreground="#FF1CBD52"/>
        <Button x:Name="Bouton_Exit" Content="Exit" HorizontalAlignment="Left" Margin="123,119,0,0" VerticalAlignment="Top" Width="97" Height="34" Foreground="White" Background="#FFE41010" FontSize="20" FontFamily="Showcard Gothic" Click="Bouton_Exit_Click"/>

    </Grid>
</Window>

